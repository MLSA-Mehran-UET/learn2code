public static class IDDFS {
    static bool DLS(Graph g, int src, int target, int depth, HashSet<int> vis) {
        if (src == target) return true;
        if (depth == 0) return false;
        vis.Add(src);
        foreach (var (v, _) in g.Adj[src])
            if (!vis.Contains(v) && DLS(g, v, target, depth - 1, vis)) return true;
        return false;
    }

    public static bool Search(Graph g, int start, int target, int maxDepth) {
        for (int d = 0; d <= maxDepth; d++)
            if (DLS(g, start, target, d, new HashSet<int>())) return true;
        return false;
    }
}
